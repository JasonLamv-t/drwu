/* miniprogram/pages/chat/chatList.wxss */
.weui-cells {
  margin: 0;
  padding: 0;
}

.avatar {
  width: 48px;
  height: 48px;
  margin-right: 12px;
}

.badge {
  position: absolute;
  left: 50px;
  top: 0px;
}

.weui-cell {
  height: 48px;
  margin-top: 4px;
  padding: 12px 16px;
}

.name {
  height: 22px;
  line-height: 14px;
  font-size: 20px;
  color: #161616;
}

.preview {
  height: 18px;
  line-height: 16px;
  font-size: 15px;
  color: #A9A9A9;
}

.footer {
  font-size: 13px;
  color: #B5B5B5;
}